@model WebApplication1.Models.tblEmployeeNew
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create","Emp",FormMethod.Post))
{
    <table>
        <tr>
            <td>Name :</td>
            <td>@Html.TextBoxFor(x => x.Name)</td>
        </tr>
        <tr>
            <td>Age :</td>
            <td>@Html.EditorFor(x => x.Age)</td>
